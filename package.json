{
  "name": "peerlink",
  "version": "0.2.2",
  "private": false,
  "type": "module",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "",
    "prod": "",
    "clean": "rm -rf dist build",
    "transpile": "esbuild --platform=node --bundle --outfile=build/serverfiles.js src/index.js",
    "compile": "pkg  --public --targets latest-linux-x64 --public-packages '*' --compress brotli --out-path=dist/ build/serverfiles.js",
    "compile:clean": "rm -rf build",
    "build": "run-s clean transpile compile compile:clean",
    "bab": "babel src -d babout"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "hypercore": "^8.3.0",
    "hyperswarm": "^2.14.0",
    "hypertrie": "^5.0.2",
    "librarycomposer": "^0.1.8",
    "node-safeflow": "^0.8.3",
    "pkg": "^5.3.1",
    "pump": "^3.0.0",
    "ws": "^8.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "esbuild": "^0.12.15"
  },
  "pkg": {
    "output": "dist",
    "targets": [
      "node14-linux-arm64"
    ]
  }
}
